# Aktifkan mod_rewrite
RewriteEngine On

# Biarkan request langsung ke file/folder yang memang ada
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Biarkan sitemap.xml & robots.txt bisa diakses langsung
RewriteCond %{REQUEST_URI} ^/sitemap\.xml$ [OR]
RewriteCond %{REQUEST_URI} ^/robots\.txt$
RewriteRule ^ - [L]

# Hilangkan ekstensi .html dari URL
RewriteCond %{DOCUMENT_ROOT}/$1.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# Redirect supaya .html tidak kelihatan di URL
RewriteCond %{THE_REQUEST} \s/+([^.]+)\.html[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# Catch-all: selain di atas, arahkan ke index.html
RewriteRule ^ index.html [L]
